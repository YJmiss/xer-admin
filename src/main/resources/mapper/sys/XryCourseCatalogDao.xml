<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oservice.admin.modules.sys.dao.XryCourseCatalogDao">

    <!--查询返回的数据总数-->
    <select id="countTotal" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from xry_course_catalog where 1=1
        <if test="params.title != null and params.title != ''">
            and title like #{params.title}
        </if>
        <if test="params.courseid != null and params.title != ''">
            and courseid = #{params.courseid}
        </if>
    </select>
    <!--自定义分页查询-->
    <select id="pageList" parameterType="java.util.Map" resultType="java.util.Map">
        select b.title as courseTitle,a.* from xry_course_catalog a left join xry_course b on (a.courseid = b.id) where 1=1
        <if test="params.title != null and params.title != ''">
            and a.title like #{params.title}
        </if>
        <if test="params.courseid != null and params.courseid != ''">
            and a.courseid = #{params.courseid}
        </if>
        <if test="params.pageSize != null and params.pageSize != ''">
            limit ${params.pageNo},${params.pageSize}
        </if>
    </select>
    <!-- 查询课程和课程目录信息 -->
    <select id="queryCourseAndCourseCatalog" resultType="com.oservice.admin.modules.sys.entity.XryCourseCatalogEntity">
      select * from xry_course_catalog left join xry_course on xry_course_catalog.#{courseid} = xry_course.id;
    </select>
    <!-- 查询目录树 -->
    <select id="treeCourseCatalog" resultType="com.oservice.admin.modules.sys.entity.XryCourseCatalogEntity">
      select * from xry_course_catalog where 1=1
        <if test="_parameter != null">
            and courseid = #{_parameter,jdbcType=INTEGER}
        </if>
    </select>
    <!--判断与之关联的“目录”的资料是否已填-->
    <select id="judeCatalogIsFullByCourseId" parameterType="java.lang.Long" resultType="com.oservice.admin.modules.sys.entity.XryCourseCatalogEntity">
      select * from xry_course_catalog where courseid = #{id}
    </select>
    <!--删除目录之前判断目录是否存在视频-->
    <select id="listVideoByCatalogId" parameterType="java.lang.Long" resultType="com.oservice.admin.modules.sys.entity.XryVideoEntity">
      select * from xry_video where catalog_id = #{id}
    </select>

</mapper>