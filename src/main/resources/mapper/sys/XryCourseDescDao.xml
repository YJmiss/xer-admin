<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oservice.admin.modules.sys.dao.XryCourseDescDao">

    <!--自定义分页查询-->
    <select id="pageList" parameterType="java.util.Map" resultType="java.util.Map">
        select * from xry_course_desc a left join xry_course b on (a.course_id = b.id) where 1=1
        <if test="params.courseId != null and params.courseId != ''">
            and a.course_id = #{params.courseId}
        </if>
        <if test="params.limit != null">
            limit 0,${params.limit}
        </if>
    </select>
    <!--重写查询-->
    <select id="queryById" resultType="com.oservice.admin.modules.sys.entity.XryCourseDescEntity" parameterType="java.lang.Long">
      select * from xry_course_desc where course_id=#{id}
    </select>
    <!--重写修改-->
    <update id="updateById" parameterType="com.oservice.admin.modules.sys.entity.XryCourseDescEntity">
        update xry_course_desc set course_desc = #{courseDesc} WHERE course_id = #{courseId}
    </update>
    <!--重写删除-->
    <delete id="deleteBatchIds" parameterType="java.lang.Long">
        delete from xry_course_desc where course_id in
        <foreach collection="courseIds" item="id" open="(" separator="," close=")">
            #{id,jdbcType=INTEGER}
        </foreach>
    </delete>

</mapper>