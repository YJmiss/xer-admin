<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oservice.admin.modules.sys.dao.XryUserDao">

    <!--查询返回的数据总数-->
    <select id="countTotal" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from xry_user  where 1=1
        <if test="params.phone != null and params.phone != ''">
            and phone like #{params.phone}
        </if>
        <if test="params.status != null and params.status != ''">
            and status = #{params.status}
        </if>
        <if test="params.role != null and params.role != ''">
            and role = #{params.role}
        </if>
        <if test="params.socialSource != null and params.socialSource != ''">
            and social_source = #{params.socialSource}
        </if>
        <if test="params.recommend != null and params.recommend != ''">
            and recommend = #{params.recommend}
        </if>
    </select>
    <!--自定义分页查询-->
    <select id="pageList" parameterType="java.util.Map" resultType="java.util.Map">
        select * from xry_user  where 1=1
        <if test="params.phone != null and params.phone != ''">
            and phone like #{params.phone}
        </if>
        <if test="params.status != null and params.status != ''">
            and status = #{params.status}
        </if>
        <if test="params.role != null and params.role != ''">
            and role = #{params.role}
        </if>
        <if test="params.socialSource != null and params.socialSource != ''">
            and social_source = #{params.socialSource}
        </if>
        <if test="params.recommend != null and params.recommend != ''">
            and recommend = #{params.recommend}
        </if>
        <if test="params.pageSize != null and params.pageSize != ''">
            limit ${params.pageNo},${params.pageSize}
        </if>
    </select>
    <!-- 查询讲师树 -->
    <select id="treeUser" resultType="com.oservice.admin.modules.sys.entity.XryUserEntity">
      select * from xry_user where role = 1
    </select>
    <!--重写删除-->
    <delete id="deleteBatchIds" parameterType="java.lang.String">
        delete from xry_user where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id,jdbcType=VARCHAR}
        </foreach>
    </delete>

</mapper>