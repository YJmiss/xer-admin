<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oservice.admin.modules.app.dao.OrderCourseDao">
    <select id="getOrderCourses" resultType="com.oservice.admin.modules.app.entity.XryOrderCourseEntity">
        select * from xry_order_course where order_id=#{orderId}
    </select>
    <insert id="addOrderCourses" parameterType="com.oservice.admin.modules.app.entity.XryOrderCourseEntity">
        insert into xry_order_course (id,course_id,order_id,title,price,pic_path)
        values (#{id},#{courseId},#{orderId},#{title},#{price},#{picPath})
    </insert>

</mapper>