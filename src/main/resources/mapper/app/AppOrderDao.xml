<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oservice.admin.modules.app.dao.AppOrderDao">
    <insert id="addOrder" parameterType="com.oservice.admin.modules.app.entity.XryOrderEntity">
        insert into xry_order ( order_id,total_fee, payment_type,status,create_time,update_time,user_id,buyer_phone )
        VALUES(#{orderId},#{totalFee},#{paymentType},#{status},#{createTime},#{updateTime},#{userId},#{buyerPhone})
    </insert>

    <select id="getOrderIdByUserId" parameterType="string" resultType="String">
        select order_id from xry_order where user_id=#{id};
    </select>

    <select id="selectByUserId" resultType="com.oservice.admin.modules.app.entity.XryOrderEntity"
            parameterType="string">
        select * from xry_order where user_id=#{id};
    </select>

    <delete id="deleteOrderByorId">
        delete from xry_order where order_id=#{orderId};
    </delete>

    <select id="getunpaidOrderByUserId" resultType="com.oservice.admin.modules.app.entity.XryOrderEntity"
            parameterType="string">
         select * from xry_order where user_id =#{id} and status=1;
    </select>

    <select id="getPaidOrderByUserId" resultType="com.oservice.admin.modules.app.entity.XryOrderEntity"
            parameterType="string">
        select * from xry_order where user_id =#{id} and status=2;
    </select>

    <select id="getCloseOrderByUserId" resultType="com.oservice.admin.modules.app.entity.XryOrderEntity"
            parameterType="string">
        select * from xry_order where user_id =#{id} and status=3;
    </select>

    <!--查询返回的数据总数-->
    <select id="countTotal1" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from xry_order where 1=1
        <if test="params.orderId != null and params.orderId != ''">
            and order_id = #{params.orderId}
        </if>
        <if test="params.phone != null and params.phone != ''">
            and buyer_phone = #{params.phone}
        </if>
        <if test="params.created != null and params.created != ''">
            and created like #{params.created}
        </if>
        <if test="params.status != null and params.status != ''">
            and status = #{params.status}
        </if>
    </select>

    <!--自定义分页查询-->
    <select id="pageList1" parameterType="java.util.Map" resultType="java.util.Map">
        select * from xry_order where 1=1
        <if test="params.orderId != null and params.orderId != ''">
            and order_id = #{params.orderId}
        </if>
        <if test="params.phone != null and params.phone != ''">
            and buyer_phone = #{params.phone}
        </if>
        <if test="params.created != null and params.created != ''">
            and created like #{params.created}
        </if>
        <if test="params.status != null and params.status != ''">
            and status = #{params.status}
        </if>
    </select>
</mapper>