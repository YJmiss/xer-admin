<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oservice.admin.modules.app.dao.WithdrawalRecordDao">
    <insert id="insert1" parameterType="com.oservice.admin.modules.app.entity.WithdrawalRecord">
        insert into withdrawal_record (id,user_name,user_id,mobile,card_number,`type`,cashWithdrawal_amount,`status`,create_time )
        VALUES(#{id},#{userName},#{userId},#{mobile},#{cardNumber},#{type},#{cashWithdrawalAmount},#{status},#{create_time})
    </insert>

    <select id="getWithdrawalRecordByUid" parameterType="string"
            resultType="com.oservice.admin.modules.app.entity.WithdrawalRecord">
        select * from withdrawal_record where user_id=#{id} and status=2;
    </select>

    <select id="getInformationByUid" parameterType="string"
            resultType="com.oservice.admin.modules.app.entity.WithdrawalRecord">
        select * from withdrawal_record where user_id=#{id} and status=0;
    </select>

    <!--查询返回的数据总数-->
    <select id="countTotal2" parameterType="java.util.Map" resultType="java.lang.Long">
        select count(*) from withdrawal_record where 1=1
        <if test="mobile !=null and mobile != '' ">
            and mobile = #{params.mobile}
        </if>
        <if test="createTime !=null and createTime != ''">
            and create_time like #{params.createTime}
        </if>
        <if test="status != null and status != ''">
            and status = #{params.status}
        </if>
    </select>

    <!--自定义分页查询-->
    <select id="pageList2" parameterType="java.util.Map" resultType="java.util.Map">
        select * from withdrawal_record where 1=1
        <if test="mobile != null and mobile != ''">
            and mobile = #{mobile}
        </if>
        <if test="createTime != null and createTime != ''">
            and create_time like #{createTime}
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
        <if test="pageSize != null and pageSize != ''">
            limit ${pageNo},${pageSize}
        </if>
    </select>

    <update id="updateWithdrawal" parameterType="String">
        update withdrawal_record set status=2,end_time=now() where id=#{id}
    </update>
</mapper>